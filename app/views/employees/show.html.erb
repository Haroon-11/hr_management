<div class="col-lg-12">
  <div class="card mt-5 mb-3 rounded-0">
    <div class="card-body">
      <h2 class="text-center">Employee Details</h2>
      <div class="row">
        <div class="col-lg-6">
          <h3 class="text-center mb-5">Personal information</h3>
          <p class="lead">
            <strong>First Name: </strong><%= @employee.first_name %>
          </p>
          <p class="lead">
            <strong>Last Name: </strong><%= @employee.last_name.present? ?
            @employee.last_name : "NA" %>
          </p>
          <p class="lead">
            <strong>Personal Email: </strong><%= @employee.email %>
          </p>
          <p class="lead">
            <strong>Phone Number: </strong><%= @employee.phone_num %>
          </p>
        </div>
        <div class="col-lg-6">
          <h3 class="text-center mb-5">Address information</h3>
          <p class="lead"><strong>address: </strong><%= @employee.address %></p>
          <p class="lead"><strong>Country: </strong><%= @employee.country %></p>
          <p class="lead"><strong>PinCode: </strong><%= @employee.pincode %></p>
        </div>
      </div>
      <%= link_to "Back to Employees", employees_path, class:"btn
      btn-outline-success btn-lg mb-3 " %> <%= link_to "Edit Employee",
      edit_employee_path(@employee) ,class: "btn btn-success btn-lg mb-3
      rounded-0" %>
    </div>
  </div>
</div>
