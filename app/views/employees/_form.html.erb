<%= form_with model: employee do |form| %>
<div class="row">
    <div class="col-lg-4">
        <div class="form-group">
            <%= form.label :first_name, class: "mb-2" %>
            <%= form.text_field :first_name ,class:"form-control form-control-lg" %>
            <% @employee.errors.full_messages_for(:first_name).each do |message| %>
            <p class="text-danger"><%= message %> </p>
            <% end%>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="form-group">
            <%= form.label :last_name, class: "mb-2" %>
            <%= form.text_field :last_name ,class:"form-control form-control-lg" %>
            <% @employee.errors.full_messages_for(:last_name).each do |message| %>
            <p class="text-danger"><%= message %> </p>
            <% end%>
        </div>
    </div>

   
</div>


    
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <%= form.label :email, class: "mb-2" %>
                <%= form.email_field :email ,class:"form-control form-control-lg" %>
                <% @employee.errors.full_messages_for(:email).each do |message| %>
            <p class="text-danger"><%= message %> </p>
            <% end%>
            </div>
        </div>  
        <div class="col-lg-6">
            <div class="form-group">
                <%= form.label :phone_number, class: "mb-2" %>
                <%= form.text_field :phone_num,class:"form-control form-control-lg" %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            <div class="form-group">
                <%= form.label :address, class: "mb-2" %>
                <%= form.text_field :address , class:"form-control form-control-lg" %>
                <% @employee.errors.full_messages_for(:address).each do |message| %>
                <p class="text-danger"><%= message %> </p>
                <% end%>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <%= form.label :country, class: "mb-2" %>
                <%= form.text_field :country ,class:"form-control form-control-lg" %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2">
            <div class="form-group">
                <%= form.label :pincode, class: "mb-2" %>
                <%= form.text_field :pincode ,class:"form-control form-control-lg" %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 mt-4">
            <%= form.submit class:"btn btn-success btn-lg mb-3 " %>
            <%= link_to "Back to Employees", employees_path, class:"btn btn-outline-success btn-lg mb-3 " %>
        </div>
        
    </div>

</div>


<% end %>